<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Visão geral</title>
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <%- include('partials/navbar') %>

    <h1>Estatísticas do Condomínio</h1>
    <div class="stats-container">

        <div class="stats-top">
            <div class="stat-card">
                <h2>Moradores</h2>
                <p class="stat-number"><%= morador[0].totalMoradores %></p>
            </div>
            
            <div class="stat-card">
                <h2>Apartamentos</h2>
                <p class="stat-number"><%= apartamento[0].totalApartamentos %></p>
            </div>
            
            <div class="stat-card">
                <h2>Blocos</h2>
                <p class="stat-number"><%= bloco[0].totalBlocos %></p>
            </div>
        
        </div>
    
        <div class="stats-bottom">
            <div class="stat-card">
                <h2>Manutenções Pendentes</h2>
                <p class="stat-number"><%= manutencao[0].manutencoesPendentes %></p>
            </div>

            <div class="stat-card">
                <h2>Pagamentos realizados</h2>
                <p class="stat-number"><%= pagamento[0].pagamentosRealizados %></p>
            </div>
        </div>
    </div>

    <h2 class="chart-h2">Distribuição de Moradores por Bloco</h2>
    <canvas id="moradorBlocoChart" width="400" height="200" class="chart-styled"></canvas>
    
    <script>
        // Dados vindos do backend
        const moradorBloco = <%- JSON.stringify(moradorBloco) %>;

        const blocosMap = moradorBloco.reduce((acc, item) => {
            acc[item.nome_bloco] = (acc[item.nome_bloco] || 0) + 1;
            return acc;
        }, {});

        const labels = Object.keys(blocosMap);
        const data = Object.values(blocosMap);

        const ctx = document.getElementById('moradorBlocoChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Número de Moradores',
                    data: data,
                    backgroundColor: '#3498db'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                    title: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { precision: 0 }
                    }
                }
            }
        });
    </script>
</body>
</html>
